<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox android:id="@+id/checkDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/txtTodoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Simple Todo Task"
        app:layout_constraintTop_toTopOf="@id/checkDone"
        app:layout_constraintBottom_toBottomOf="@id/checkDone"
        app:layout_constraintLeft_toRightOf="@+id/checkDone"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>